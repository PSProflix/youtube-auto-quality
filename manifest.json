{
  "manifest_version": 3,
  "name": "YouTube Auto Quality",
  "version": "1.0.1",
  "description": "Automatically sets the best available YouTube quality (with an optional preferred cap).",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Auto Quality"
  }
}
