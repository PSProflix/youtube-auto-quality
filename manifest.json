{
  "manifest_version": 3,
  "name": "YouTube Auto Quality",
  "version": "1.0.0",
  "description": "Automatically set your preferred YouTube video quality",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Auto Quality"
  },
  "background": {
    "service_worker": "background.js"
  }
}
